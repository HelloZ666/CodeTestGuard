{
  "$schema": "https://zeabur.com/zeabur-config-schema.json",
  "services": {
    "frontend": {
      "build": {
        "cmd": ["npm", "install", "&&", "npm", "run", "build"],
        "workdir": "."
      },
      "output": ["dist"],
      "deploy": {
        "command": ["npx", "vite", "preview", "--port", "3000", "--host"],
        "targetPort": 3000,
        "healthCheck": {
          "path": "/",
          "initialDelaySeconds": 10,
          "periodSeconds": 5
        }
      },
      "env": {
        "VITE_API_URL": "http://api:8000/api"
      }
    }
  }
}
