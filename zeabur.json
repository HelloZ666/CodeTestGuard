{
  "$schema": "https://zeabur.com/zeabur-config-schema.json",
  "services": {
    "api": {
      "build": {
        "cmd": ["pip", "install", "-r", "requirements.txt"],
        "workdir": "."
      },
      "deploy": {
        "command": ["sh", "-c", "cd api && python -m uvicorn index:app --host 0.0.0.0 --port 8000"],
        "targetPort": 8000,
        "healthCheck": {
          "path": "/api/health",
          "initialDelaySeconds": 30,
          "periodSeconds": 10
        }
      },
      "env": {
        "DEEPSEEK_API_KEY": {
          "dynamic": true,
          "description": "DeepSeek API Key"
        }
      }
    }
  }
}
